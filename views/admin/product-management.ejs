<!--Add  Modal -->
<div
  class="modal fade"
  id="addModal"
  tabindex="-1"
  data-bs-backdrop="static"
  data-bs-keyboard="false"
  aria-labelledby="addModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header px-auto bg-dark">
        <h5 class="modal-title text-white mx-auto" id="addModalLabel">
          Add Product
        </h5>
      </div>
      <div class="modal-body">
        <form
          action="/admin/product-management"
          method="POST"
          enctype="multipart/form-data"
        >
          <!--ROW FOR NAME AND TYPE-->
          <div class="row justify-content-center mb-md-1">
            <div class="col-10 col-md-5 m-2">
              <label class="mb-md-2 me-2" for="name">Name: </label>
              <input type="text" id="name" name="name" required="" />
            </div>
            <div class="col-10 col-md-5 m-2">
              <label class="mb-md-2 me-2" for="type">Type: </label>
              <input
                class="ms-sm-1"
                type="text"
                id="type"
                name="type"
                required=""
              />
            </div>
          </div>
          <!--ROW FOR COST AND PRICE-->
          <div class="row justify-content-center mb-md-3">
            <div class="col-10 col-md-5 m-2">
              <label class="mb-md-2 me-2" for="cost">Cost:</label>
              <input
                type="number"
                name="cost"
                id="cost"
                step="0.01"
                min="0"
                required=""
              />
            </div>
            <div class="col-10 col-md-5 m-2">
              <label class="mb-md-2 me-2" for="stock">Stock:</label>
              <input
                class="ms-sm-1"
                type="number"
                name="stock"
                id="stock"
                min="0"
                required=""
              />
            </div>
          </div>
          <!--ROW FOR DESCRIPTION-->
          <div class="row align-items-center justify-content-center mb-3">
            <div class="col-4">
              <label class="mb-md-2 me-sm-2" for="description"
                >Description:</label
              >
            </div>
            <div class="col-6 px-1 px-md-5">
              <textarea
                type="message-text"
                name="description"
                id="description"
                row="1"
                cols="25"
              ></textarea>
            </div>
          </div>
          <div class="image">
            <input
              type="file"
              name="image"
              accept="image/png, image/jpeg, image/gif,image/jpg"
            />
          </div>
          <!--MODAL FOOTER-->
          <div class="row justify-content-center px-1">
            <div class="col-3">
              <button
                type="button"
                class="btn btn-secondary mx-2"
                data-bs-dismiss="modal"
              >
                Close
              </button>
            </div>
            <div class="col-3">
              <button type="submit" class="btn btn-dark px-4">Save</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!--Edit Modal-->
<div
  class="modal fade"
  id="editModal"
  tabindex="-1"
  data-bs-backdrop="static"
  data-bs-keyboard="false"
  aria-labelledby="editModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header px-auto bg-dark">
        <h5 class="modal-title text-white mx-auto" id="editModalLabel">
          Edit Product
        </h5>
      </div>
      <div class="modal-body">
        <form
          action="/admin/product-management?_method=PUT"
          method="POST"
          enctype="multipart/form-data"
        >
          <input type="hidden" id="id" name="id" required />
          <!--ROW FOR NAME AND TYPE-->
          <div class="row justify-content-center mb-md-1">
            <div class="col-10 col-md-5 m-2">
              <label class="mb-md-2 me-2" for="name">Name: </label>
              <input type="text" id="name" name="name" />
            </div>
            <div class="col-10 col-md-5 m-2">
              <label class="mb-md-2 me-2" for="type">Type: </label>
              <input type="text" name="type" id="type" />
            </div>
          </div>
          <!--ROW FOR STOCK AND COST-->
          <div class="row justify-content-center mb-md-1">
            <div class="col-10 col-md-5 m-2">
              <label class="mb-md-2 me-2" for="cost">Cost:</label>
              <input type="number" name="cost" id="cost" step="0.01" min="0" />
            </div>
            <div class="col-10 col-md-5 m-2">
              <label class="mb-md-2 me-2" for="stock">Stock:</label>
              <input
                class="ms-sm-1"
                type="number"
                name="stock"
                id="stock"
                min="0"
              />
            </div>
          </div>
          <!--ROW FOR DESCRIPTION-->
          <div class="row align-items-center justify-content-center mb-3">
            <div class="col-4">
              <label class="mb-md-2 me-sm-2" for="description"
                >Description:</label
              >
            </div>
            <div class="col-6 px-1 px-md-5">
              <textarea
                type="message-text"
                name="description"
                id="description"
                row="1"
                cols="25"
              ></textarea>
            </div>
          </div>

          <div class="image">
            <input
              type="file"
              name="image"
              accept="image/png, image/jpeg, image/gif,image/jpg"
            />
          </div>
          <!--Modal Footer-->
          <div class="row justify-content-center px-1">
            <div class="col-3">
              <button
                type="button"
                class="btn btn-secondary mx-2"
                data-bs-dismiss="modal"
              >
                Close
              </button>
            </div>
            <div class="col-3">
              <button type="submit" class="btn btn-dark px-4">Save</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!--Delete Modal-->
<div
  class="modal fade"
  id="deleteModal"
  tabindex="-1"
  aria-labelledby="deleteModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header px-auto bg-dark">
        <h5 class="modal-title text-white mx-auto" id="deleteModalLabel">
          Delete Product
        </h5>
      </div>
      <div class="modal-body">
        <form action="/admin/product-management?_method=DELETE" method="POST">
          <div class="row justify-content-center px-1">
            <p class="text-center">Confirm delete?</p>
            <input type="hidden" id="delete" name="id" required />
            <div class="col-3">
              <button
                type="button"
                class="btn btn-secondary mx-2"
                data-bs-dismiss="modal"
              >
                Close
              </button>
            </div>
            <div class="col-3">
              <button type="submit" class="btn btn-dark px-4">Yes</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

